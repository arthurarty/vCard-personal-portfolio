{
  "devDependencies": {
    "jshint": "^2.13.6",
    "lint-staged": "^15.2.0",
    "prettier": "3.1.1",
    "husky": "^8.0.0"
  },
  "scripts": {
    "lint": "jshint .",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "jshint"
    ],
    "*.css": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}
